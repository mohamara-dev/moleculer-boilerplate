{
	"swagger": {
		"baseUrl": "./",
		"outputDirectory": "./swagger",
		"entryFile": "./services/index.ts",
		"host": "localhost:3000",
		"basePath": "/api",
		"securityDefinitions": {
			"api_key": {
				"type": "apiKey",
				"name": "access_token",
				"in": "query"
			},
			"tsoa_auth": {
				"type": "oauth2",
				"authorizationUrl": "http://swagger.io/api/oauth/dialog",
				"flow": "implicit",
				"scopes": {
					"write:pets": "modify things",
					"read:pets": "read things"
				}
			}
		},
		"yaml": true
	}
}